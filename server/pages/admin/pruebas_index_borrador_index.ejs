                <div class="col mb-1">
                  <div class="card-body">
                    <div class="row align-items-center text-center">
                      <div class="col">
                              <div class="h3 mb-0 font-weight-bold text-gray-800" data-bind="text: descripcion"></div>
                      </div>
                        
                        <div class="col">
                          <div class="h4 mb-0 font-weight-bold text-gray-800" data-bind="text: jornada"></div>
                      </div> 
                      <div class="col">
                        <div class="h4 mb-0 font-weight-bold text-gray-800" data-bind="text: unidadMovil"></div>
                      </div> 
                      <div class="col">
                        <div class="h4 mb-0 font-weight-bold text-gray-800" data-bind="text: ip"></div>
                      </div> 
                    </div>
                  </div>
                </div>
                <!-- End Content Row Partido -->
              </div>
          <!-- /ko -->
          
           <!-- /ko -->
          <!-- Content Row Partido -->
          <!-- ko foreach: lista2() -->
          <div class="row" >

            <!-- Card Partido 1 -->
            <div class="col-12 mb-1">
              <div class="card-body">
                <div class="row no-gutters align-items-center text-center">
                  <div class="col-12 col-lg">
                          <div class="h1 mb-0 font-weight-bold text-gray-800" data-bind="text: descripcion"></div>
                  </div>
                    
                    <div class="col-6 col-lg-3 mr-4">
                      <div class="h1 mb-0 font-weight-bold text-gray-800" data-bind="text: jornada"></div>
                  </div> 
                  <div class="col-6 col-lg-3 mr-4">
                    <div class="h1 mb-0 font-weight-bold text-gray-800" data-bind="text: unidadMovil"></div>
                  </div> 
                  <div class="col-6 col-lg-3 mr-4">
                    <div class="h1 mb-0 font-weight-bold text-gray-800" data-bind="text: ip"></div>
