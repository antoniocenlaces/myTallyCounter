<%- include ('../../partials/header.ejs'); %>
<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">
    <%- include('../../partials/sidebar.ejs', {section: 'mobileUnits'}); %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">
          <%- include('../../partials/topbar.ejs', {user: user}); %>

        <!-- Begin Page Content TODO-->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800"></i>REGISTRAR NUEVA UNIDAD MÓVIL</h1>
            <!--<a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>-->
          </div>
          
          <% var messages = getMessages() %>
          <% if (messages.error) { %>
            <div class="alert alert-danger col-sm-12"><%= messages.error %></div>
          <% } %>
          <% if (messages.success) { %>
            <div class="alert alert-success col-sm-12"><%= messages.success %></div>
          <% } %>
          
          <form action="/configuration/mobile_units/register" method="post">
            
                <div class="form-group row">
                  <label for="mobUnitName" class="col-sm-2 col-form-label">Nombre de la Unidad</label>
                  <div class="col-md-4">
                     <input type="text" class="form-control" id="mobUnitName" placeholder="Ej. Unidad Móvil 01" required name="mobUnitName" value="<%= messages.mobUnitName %>">
                  </div>
                </div>

                <div class="form-group row">
                  <label for="mobUnitNumberPlate" class="col-sm-2 col-form-label">Matrícula del Vehículo</label>
                  <div class="col-md-4">
                     <input type="text" class="form-control" id="mobUnitNumberPlate" placeholder="Ej. 1234 BCD" required name="mobUnitNumberPlate" value="<%= messages.mobUnitNumberPlate %>">
                  </div>
                </div>

                <div class="form-group row">
                  <label for="mobUnitVehicle" class="col-sm-2 col-form-label">Tipo de Vehículo</label>
                  <div class="col-md-4">
                     <input type="text" class="form-control" id="mobUnitVehicle" placeholder="Ej. Furgoneta" required name="mobUnitVehicle" value="<%= messages.mobUnitVehicle %>">
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-md-2"></div>
                  <div class="col-md-4">
                    <button type="submit" class="btn btn-lg btn-success mb-2 btn-block">Registrar Unidad Móvil</button>
                  </div>
                </div>
              </form>
            
            </div>
          <!-- /.container-fluid -->
  
        </div>
        <!-- End of Main Content -->
  
  
  <%- include ('../../partials/footer.ejs'); %>
  
  </body>
  
  </html>
  