<%- include ('../../partials/header.ejs'); %>

  <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include('../../partials/sidebar.ejs', {section: 'mobileUnits' }); %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

          <!-- Main Content -->
          <div id="content">
            <%- include('../../partials/topbar.ejs', {user: user}); %>

              <!-- Begin Page Content TODO-->
              <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                  <h1 class="h3 mb-0 text-gray-800"></i>MODIFICAR UNIDAD MÓVIL</h1>
                  <!--<a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>-->
                </div>

                <% var messages=getMessages() %>
                  <% if (messages.error) { %>
                    <div class="alert alert-danger col-sm-12">
                      <%= messages.error %>
                    </div>
                    <% } %>
                      <% if (messages.success) { %>
                        <div class="alert alert-success col-sm-12">
                          <%= messages.success %>
                        </div>
                        <% } %>

                          <form
                            action="/configuration/mobile_units/update<%= (mUnits.length == 1) ? '/' + 'Unidades_Moviles.UMID' : '' %>"
                            method="post">

                            <div class="form-group row">
                              <label for="mobUnitID" class="col-sm-2 col-form-label">Nombre Actual</label>

                              <div class="col-md-4">
                                <select class="custom-select my-1 mr-sm-2" id="mobUnitID" required name="mobUnitID">
                                  <% (mUnits.length> 1) ? '<option selected>Seleccione Unidad Móvil</option>' : '' %>
                                    <% mUnits.forEach((DB_Unidades_Moviles, index)=> { %>
                                      <option value="<%= DB_Unidades_Moviles.UMID %>">
                                        <%= DB_Unidades_Moviles.Nombre %>
                                      </option>
                                      <% }) %>
                                </select>
                              </div>
                            </div>

                            <div class="form-group row">
                              <label for="mobUnitName" class="col-sm-2 col-form-label">Nuevo Nombre de la Unidad Móvil</label>
                              <div class="col-md-4">
                                
                                <input type="text" class="form-control" id="mobUnitName"
                                  placeholder="Nuevo Nombre de la Unidad Móvil" required name="mobUnitName"
                                  value="<%= messages.mobUnitName %>">
                                  
                              </div>
                            </div>

                            <div class="form-group row">
                              <label for="mobUnitNumberPlate" class="col-sm-2 col-form-label">Matrícula del
                                Vehículo</label>
                              <div class="col-md-4">
                                <input type="text" class="form-control" id="mobUnitNumberPlate"
                                  placeholder="Nueva Matrícula del Vehículo" required name="mobUnitNumberPlate"
                                  value="<%= messages.mobUnitNumberPlate %>">
                              </div>
                            </div>

                            <div class="form-group row">
                              <label for="mobUnitVehicle" class="col-sm-2 col-form-label">Tipo de Vehículo</label>
                              <div class="col-md-4">
                                <input type="text" class="form-control" id="mobUnitVehicle"
                                  placeholder="Nuevo Tipo de Vehículo" required name="mobUnitVehicle"
                                  value="<%= messages.mobUnitVehicle %>">
                              </div>
                            </div>

                            <div class="form-group row">
                              <div class="col-md-2"></div>
                              <div class="col-md-4">
                                <button type="submit" class="btn btn-lg btn-primary mb-2 btn-block">Modificar Unidad
                                  Móvil</button>
                              </div>
                            </div>
                          </form>

              </div>
              <!-- /.container-fluid -->

          </div>
          <!-- End of Main Content -->


          <%- include ('../../partials/footer.ejs'); %>

  </body>

  </html>