<%- include ('../../partials/header.ejs'); %>

  <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include('../../partials/sidebar.ejs', {section: 'mixers' }); %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

          <!-- Main Content -->
          <div id="content">
            <%- include('../../partials/topbar.ejs', {user: user}); %>

              <!-- Begin Page Content TODO-->
              <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                  <h1 class="h3 mb-0 text-gray-800"></i>MODIFICAR MEZCLADORA</h1>
                  <!--<a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>-->
                </div>

                <% var messages=getMessages() %>
                  <% if (messages.error) { %>
                    <div class="alert alert-danger col-sm-12">
                      <%= messages.error %>
                    </div>
                    <% } %>
                      <% if (messages.success) { %>
                        <div class="alert alert-success col-sm-12">
                          <%= messages.success %>
                        </div>
                        <% } %>

                          <form
                            action="/configuration/mixers/update<%= (mixerUnits.length == 1) ? '/' + 'Mezcladoras.MezcladoraID' : '' %>"
                            method="post">

                            <div class="form-group row">
                              <label for="mixerID" class="col-sm-2 col-form-label">Nombre Actual</label>

                              <div class="col-md-4">
                                <select class="custom-select my-1 mr-sm-2" id="mixerID" required name="mixerID">
                                  <% (mixerUnits.length> 1) ? '<option selected>Seleccione Mezcladora</option>' : '' %>
                                    <% mixerUnits.forEach((DB_Mezcladoras)=> { %>
                                      <option value="<%= DB_Mezcladoras.MezcladoraID %>">
                                        <%= DB_Mezcladoras.Nombre %>
                                      </option>
                                      <% }) %>
                                </select>
                              </div>
                            </div>

                            <div class="form-group row">
                              <label for="mixerName" class="col-sm-2 col-form-label">Nuevo Nombre de la Mezcladora</label>
                              <div class="col-md-4">
                                
                                <input type="text" class="form-control" id="mixerName"
                                  placeholder="Nuevo Nombre de la Mezcladora" required name="mixerName"
                                  value="<%= messages.mixerName %>">
                                  
                              </div>
                            </div>

                            <div class="form-group row">
                              <label for="mixerBrand" class="col-sm-2 col-form-label">Marca de la Mezcladora</label>
                              <div class="col-md-4">
                                <input type="text" class="form-control" id="mixerBrand"
                                  placeholder="Marca de la Mezcladora" required name="mixerBrand"
                                  value="<%= messages.mixerBrand %>">
                              </div>
                            </div>

                            <div class="form-group row">
                              <label for="mixerModel" class="col-sm-2 col-form-label">Modelo de la Mezcladora</label>
                              <div class="col-md-4">
                                <input type="text" class="form-control" id="mixerModel"
                                  placeholder="Modelo de la Mezcladora" required name="mixerModel"
                                  value="<%= messages.mixerModel %>">
                              </div>
                            </div>

                            <div class="form-group row">
                              <div class="col-md-2"></div>
                              <div class="col-md-4">
                                <button type="submit" class="btn btn-lg btn-primary mb-2 btn-block">Modificar Mezcladora</button>
                              </div>
                            </div>
                          </form>

              </div>
              <!-- /.container-fluid -->

          </div>
          <!-- End of Main Content -->


          <%- include ('../../partials/footer.ejs'); %>

  </body>

  </html>